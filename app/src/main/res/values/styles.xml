<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!--高度48布局——下划线-->
    <style name="ll_style_48_bottom">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">@dimen/dp_15</item>
        <item name="android:paddingRight">@dimen/dp_15</item>
        <item name="android:background">@drawable/shape_item_bottom</item>
        <item name="android:minHeight">@dimen/item_height</item>
    </style>

    <style name="font_normal">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/font_normal</item>
        <item name="android:textColor">@color/normal_black_1</item>
        <item name="android:textColorHint">@color/normal_black_4</item>
    </style>

    <style name="Dialog" parent="android:style/Theme.Holo.Light">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:textColor">@color/normal_black_1</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="custom_dialog" parent="android:style/Theme.Holo.Light">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:textColor">@color/normal_black_1</item>
        <item name="android:editTextColor">@color/normal_black_1</item>
    </style>

    <style name="mainTextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">@dimen/sp_15</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/shape_orange_bg</item>
        <item name="android:padding">@dimen/dp_12</item>
        <item name="android:layout_margin">@dimen/dp_5</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:lines">1</item>
        <item name="android:ellipsize">end</item>
    </style>
</resources>
